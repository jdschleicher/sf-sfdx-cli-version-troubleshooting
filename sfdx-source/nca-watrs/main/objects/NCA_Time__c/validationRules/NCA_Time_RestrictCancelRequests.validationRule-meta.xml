<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>NCA_Time_RestrictCancelRequests</fullName>
    <active>false</active>
    <description>Only the related user can cancel a time request.</description>
    <errorConditionFormula>$User.Id != Owner:User.Id 
&amp;&amp;
TEXT( Premium_Pay_Status__c ) = &quot;Cancelled&quot;</errorConditionFormula>
    <errorDisplayField>Premium_Pay_Status__c</errorDisplayField>
    <errorMessage>Time request can only be cancelled by the related employee.</errorMessage>
</ValidationRule>
