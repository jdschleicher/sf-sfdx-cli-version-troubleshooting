<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Employee__c</field>
        <field>Leave_Type__c</field>
        <field>Start_Date__c</field>
        <field>End_Date__c</field>
        <field>Premium_Pay_Status__c</field>
        <field>Comments__c</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Management_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Site_Supervisor__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Team_Leader__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>NCA_WATRS_Notifications/Pending_Time_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>NCA_Time__c.Premium_Pay_Status__c</field>
            <operation>equals</operation>
            <value>New,Recalled,Cancelled</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approval_Time_Stamp</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approved_Uncheck_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Site_Supervisor_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Time_request_has_been_approved</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Uncheck_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Change_Status_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Time_request_has_been_rejected</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>NCA WATRS - Employee/CM Time Approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>true</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Approved_Uncheck_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
