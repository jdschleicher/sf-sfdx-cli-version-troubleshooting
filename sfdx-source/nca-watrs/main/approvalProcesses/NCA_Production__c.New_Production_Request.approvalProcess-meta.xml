<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Name_Profile__c</field>
        <field>Site_Location__c</field>
        <field>Supervisor_Name__c</field>
        <field>Status__c</field>
        <field>Owner</field>
        <field>Veteran_ID__c</field>
        <field>AMAS_ID__c</field>
        <field>NCA_WATRS_Case_Assembly_Date__c</field>
        <field>NCA_WATRS_Case_C_Date__c</field>
        <field>MEL_Completed_Letters_Created_Date__c</field>
        <field>NCA_WATRS_Case_Days_Difference__c</field>
        <field>MEL_Completed_Letters_Letter_Code__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Management_Approval_Queue</name>
                <type>queue</type>
            </approver>
            <approver>
                <name>Team_Lead_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <approver>
                <name>Site_Supervisor_User__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Check New Production</label>
        <name>Check_New_Production</name>
    </approvalStep>
    <emailTemplate>NCA_WATRS_Notifications/Pending_Production_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>Approved_Uncheck_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>production_request_has_been_approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Approved2</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Approved_Uncheck_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Production_request_has_been_rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Status_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_Submitted</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>New Production Request</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Recalled_Uncheck_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Status_Recalled</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
